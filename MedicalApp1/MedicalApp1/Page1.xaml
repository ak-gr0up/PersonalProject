<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MedicalApp1.Page1">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="hearthbeat" Placeholder="Пульс" />
            <Entry x:Name="temperature" Placeholder ="Температура тела" />
            <Entry x:Name="distal_pressure" Placeholder ="Диастолическое давление" />
            <Entry x:Name="sistal_pressure" Placeholder="Систолическое давление" />
            <Label Text="Головная боль" /><CheckBox x:Name="headache"/>
            <Label Text="Головокружение" /><CheckBox x:Name="Dizziness"/>
            <Label Text="Кашель" /><CheckBox x:Name="cough"/>
            <Label Text="Насморк" /><CheckBox x:Name="rheum"/>
            <Label Text="Слабость" /><CheckBox x:Name="weakness"/>
            <Label Text="Тошнота" />
            <CheckBox x:Name="nausea"/>
            <Entry x:Name="self_feeling" Placeholder ="Самочувствие (от 1 до 10)" />
            <Button Text="Отправить" Clicked="OnDoneClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
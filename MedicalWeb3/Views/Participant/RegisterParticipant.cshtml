@{
    ViewData["Title"] = "Register Participant";
    var model = Model as List<MedicalClient.Participant>;
}

<div class="text-center">
    <h1 class="display-4">Зарегистрировать нового участника</h1>

    <form action="@Url.ActionLink(controller:"Participant", action: "RegisterParticipant")" method="post">
        <table style="width:100%;">
            <tr>
                <td>Имя</td>
                <td>
                    <input type="text" name="Name" />
                </td>
            </tr>
            <tr>
                <td>Фамилия</td>
                <td><input type="text" name="Surname" /></td>
            </tr>
            <tr>
                <td>Пол</td>
                <td><input type="text" name="Gender" /></td>
            </tr>
            <tr>
                <td>Номер телефона</td>
                <td><input type="text" name="Login" /></td>
            </tr>
        </table>
        <input type="submit" />
    </form>

</div>

@{
    ViewData["Title"] = "Участники";
    var model = Model; //as Tuple<List<MedicalClient.Participant>, List<List<int>>, List<string>>;
}
<head><link rel="stylesheet" href="~/css/site.css"></head>

<div class="text-center">
    <h1 class="display-4">Участники</h1>
    <table style="width:100%; border:1px solid black;">
        <tr>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Пол</th>
            <th>Дата рождения</th>
            <th>Логин</th>
        </tr>
        @foreach (var user in model.Item1)
        {
            <tr>
                <td><a href="/Participant/ViewDataPoints/@user.Id">@user.Name</a></td>
                <td>@user.Surname</td>
                <td>@user.Gender</td>
                <td>@user.BirthDate</td>
                <td>@user.Login</td>
            </tr>
        }
    </table>
    <a href="/Participant/DownloadAll">Скачать отправки по всем участникам</a>
    <h2 hidden="@(model.Item4)" style="margin-top:50px">Анализ</h2>
    <table border="1" hidden="@(model.Item4)">
        <tr>
            <th></th>
            <th>Температура</th>
            <th>Пульс</th>
            <th>Диастолическое давление</th>
            <th>Систолическое давление</th>
            <th>Самочувствие</th>
        </tr>
        @for (int i = 0; i < 4; i++)
        {
            <tr>
                <th>@(model.Item3[i])</th>
                @for (int j = 0; j < 5; j++)
                {
                    <td>@(Math.Round(model.Item2[i][j], 2))</td>
                }
            </tr>
        }
    </table>

</div>

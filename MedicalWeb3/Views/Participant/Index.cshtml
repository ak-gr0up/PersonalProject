@{
    ViewData["Title"] = "Participants";
    var model = Model; //as Tuple<List<MedicalClient.Participant>, List<List<int>>, List<string>>;
}

<div class="text-center">
    <h1 class="display-4">Participants</h1>
    <table style="width:100%; border:1px solid black;">
        <tr>
            <td>Name</td>
            <td>Surname</td>
            <td>Gender</td>
            <td>BirthDate</td>
            <td>Login</td>
        </tr>
        @foreach (var user in model.Item1)
        {
            <tr>
                <td><a href="/Participant/ViewDataPoints/@user.Id">@user.Name</a></td>
                <td>@user.Surname</td>
                <td>@user.Gender</td>
                <td>@user.BirthDate</td>
                <td>@user.Login</td>
            </tr>
        }
    </table>
    <a href="/Participant/DownloadAll">Download overall csv</a>
    <h2>Analysis</h2>
    <table border="1">
        <tr>
            <td></td>
            <td>Temperature</td>
            <td>Heart Beat</td>
            <td>Distal Pressure</td>
            <td>Sistal Pressure</td>
            <td>Self Feeling</td>
        </tr>
        @for (int i = 0; i < 4; i++)
        {
    <tr>
        <td>@(model.Item3[i])</td>
        @for(int j = 0; j < 5; j++)
        {
            <td>@(model.Item2[i][j])</td>
        }
    </tr>
        }
    </table>
    
</div>

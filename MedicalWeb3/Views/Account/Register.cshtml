<div class="text-center">
    <h1 class="display-4">Зарегистрироваться</h1>

    <form action="@Url.ActionLink(controller:"Account", action: "Register")" method="post">
        <table style="width:100%;">
            <tr>
                <td>Имя</td>
                <td>
                    <input type="text" name="Name" />
                </td>
            </tr>
            <tr>
                <td>Фамилия</td>
                <td><input type="text" name="Surname" /></td>
            </tr>
            <tr>
                <td>Логин</td>
                <td><input type="text" name="Login" /></td>
            </tr>
            <tr>
                <td>Пароль</td>
                <td><input type="password" name="Password" /></td>
            </tr>
        </table>
        <input type="submit" />
        <p style="color:red">@Model</p>
    </form>
</div>
